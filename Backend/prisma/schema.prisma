generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
}




model Player{
   id    String @id @default(uuid())
   email String @unique
  
   isActive Boolean @default(false)

   password String 

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
   

   teamId String?

   team Team? @relation(fields: [teamId],references: [id])

   leadTeam Team? @relation("Captain")

   createdTorunaments Tournament[]

  faceitProfile FaceitProfile?

   createdMatches Match[]

  
}

model FaceitProfile{
    id String @id @default(uuid())
    playerId String @unique

    player Player @relation(fields: [playerId],references: [id])
    faceitId String @unique
    nickname String
    avatar String?
    
    elo Int @default(0)
    skillLevel Int @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    stats FaceitStats?
    country String @default("UK")

}

model FaceitStats{
    id String @id @default(uuid())
    faceitProfileId String @unique
    faceitProfile FaceitProfile @relation(fields: [faceitProfileId],references: [id])
    mat—Åhes Int
    kdRatio Float
    winRate Float
    avg Float
    
    adr Float
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    segments SegmentStats[]
    weapons WeaponStats[]

}


model SegmentStats{
    id String @id @default(uuid())
    faceitStatsId String

    faceitStats FaceitStats @relation(fields: [faceitStatsId],references: [id])

    map String

    matches Int
    winRate Float
    kdRatio Float
    adr Float
    headshotPercentage Float



    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}


model WeaponStats{
    id String @id @default(uuid())
    faceitStatsId String

    faceitStats FaceitStats @relation(fields: [faceitStatsId],references: [id])

    weapon String

    kills Int
    accuracy Float
    headshotPercentage Float
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Team{
   id String @id @default(uuid())
   name String @unique

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

    captainId String @unique

    description String?
    
    captain Player @relation("Captain",fields: [captainId],references: [id])

    avatar String // FileName

    
    players Player[]

   matchesAsTeamA Match[] @relation("TeamA")
   matchesAsTeamB Match[] @relation("TeamB")

   tournaments TournamentMembers[]


}

model Tournament {
  id String @id @default(uuid())
  title String

  startDate DateTime

  endDate DateTime

  type TournamentType 

  prizeFund String @default("0")

  creatorId String

  creator Player @relation(fields: [creatorId],references: [id])

  mathes Match[]
  
  teams TournamentMembers[]


  
}

model TournamentMembers {

  id String @id @default(uuid())
  teamId String
  TournamentId String

  Tournament Tournament @relation(fields: [TournamentId],references: [id])
  Team Team @relation(fields: [teamId],references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}



model Match {
  id String @id @default(uuid())
  matchType MatchType

  tournamentId String?

  creatorId String

  teamAId String
  teamBId String

   

  tournament Tournament? @relation(fields: [tournamentId],references: [id])
  


  creator Player @relation(fields: [creatorId],references: [id])

  teamA Team @relation("TeamA",fields: [teamAId],references: [id])

  teamB Team @relation("TeamB",fields: [teamBId],references: [id])






  
  
  startTime DateTime? // Filling if match planned in future


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


enum MatchType {
  Tournament
  Single
}
enum TournamentType {
    OneByOne
    TwoByTwo
    FiveByFive
}


